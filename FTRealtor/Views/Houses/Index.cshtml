@using Microsoft.AspNet.Identity
@model IEnumerable<FTRealtor.Models.House>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if (Request.IsAuthenticated)
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>
@using (Html.BeginForm())
{
    <p>
        Find by MLS #: @Html.TextBox("MLSSearchInt", null, new { type = "number" })
        <input type="submit" value="Search" />

        Find by Street 1: @Html.TextBox("Street1SearchString", null)
        <input type="submit" value="Search" />

        Find by Street 2: @Html.TextBox("Street2SearchString", null)
        <input type="submit" value="Search" />
   
        Find by City: @Html.TextBox("CitySearchString", null)
        <input type="submit" value="Search" />

        Find by State: @Html.TextBox("StateSearchString", null)
        <input type="submit" value="Search" />

        Find by Zip: @Html.TextBox("ZipSearchString", null)
        <input type="submit" value="Search" />

        Find by Bedrooms: @Html.TextBox("BedroomsSearchInt", null, new { type = "number" })
        <input type="submit" value="Search" />

        Find by Bathrooms: @Html.TextBox("BathroomSearchInt", null, new { type = "number" })
        <input type="submit" value="Search" />

        Find by Square Feet: @Html.TextBox("SQFTSearchInt", null, new { type = "number" })
        <input type="submit" value="Search" />
    </p>
}
