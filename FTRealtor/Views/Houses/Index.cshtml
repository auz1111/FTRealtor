            {
                @Html.ActionLink("Details", "Details", new { id = item.HouseID }) <text>|</text>
                @Html.ActionLink("Edit", "Edit", new { id=item.HouseID }) <text>|</text>
                @Html.ActionLink("Delete", "Delete", new { id=item.HouseID })
